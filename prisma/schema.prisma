generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Guild {
  id            Int      @id @default(autoincrement())
  name          String
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  presentation  Presentation[]
  Search        Search[]
  Contact       Contact[]
}

model Presentation {
  id            Int      @id @default(autoincrement())
  name          String
  order         Int
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  guild         Guild     @relation(fields: [guildId], references: [id])
  guildId       Int
}

model Search {npx prisma migrate dev --name rename_text_to_name
  id            Int      @id @default(autoincrement())
  image         String
  name          String
  classes       String[]
  order         Int
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  guild         Guild     @relation(fields: [guildId], references: [id])
  guildId       Int
}

model Contact {
  id            Int      @id @default(autoincrement())
  name          String
  bnet          String
  order         Int
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  guild         Guild     @relation(fields: [guildId], references: [id])
  guildId       Int
}
